<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Poster-->

    <ImageView
        android:id="@+id/moviePosterImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300mdp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

<!--    shadow-->
    <View
        android:background="@drawable/shadow"
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150mdp"
        app:layout_constraintBottom_toBottomOf="@+id/moviePosterImg" />
<!--name-->
    <TextView
        android:id="@+id/movieNameText"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/_14font_mdp"
        app:layout_constraintBottom_toTopOf="@+id/movieInfoText"
        app:layout_constraintEnd_toEndOf="@+id/movieInfoText"
        app:layout_constraintStart_toStartOf="@+id/movieInfoText" />
<!--info-->
    <TextView
        android:id="@+id/movieInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawableTint="@color/carayola"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/silver"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:textSize="@dimen/_12font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/moviePosterImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>